<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itp341.chen.gong.a9chengong.CreateFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/addTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textViewAddTitle"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddTitle"
        android:layout_alignTop="@+id/textViewAddTitle"
        android:layout_toEndOf="@+id/textViewAddTitle"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/addDescription"
        android:id="@+id/textViewAddDescription"
        android:layout_below="@+id/editTextAddTitle"
        android:layout_alignStart="@+id/textViewAddTitle"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddDescription"
        android:layout_below="@+id/textViewAddDescription"
        android:layout_alignStart="@+id/textViewAddDescription"
        android:layout_marginTop="32dp"
        android:singleLine="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/addGenre"
        android:id="@+id/textViewAddGenre"
        android:layout_below="@+id/editTextAddDescription"
        android:layout_alignEnd="@+id/textViewAddDescription"
        android:layout_marginTop="24dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAddGenre"
        android:layout_alignTop="@+id/textViewAddGenre"
        android:layout_toEndOf="@+id/textViewAddGenre"
        android:spinnerMode="dropdown" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/imageViewShowGenre"
        android:layout_below="@+id/spinnerAddGenre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/buttonSave"
        android:layout_below="@+id/imageViewShowGenre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

</RelativeLayout>
